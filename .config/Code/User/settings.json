{
    // VSCode
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingComments": "never",
    "editor.autoClosingQuotes": "never",
    "editor.fontSize": 12,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "keyboard.dispatch": "keyCode", // For key remaps vs gnome-tweaks.
    "window.customTitleBarVisibility": "windowed",
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "custom",
    "workbench.editor.editorActionsLocation": "titleBar",

    // Colors
    "window.autoDetectColorScheme": true,
    "workbench.preferredLightColorTheme": "Night Owl Light",
    "workbench.preferredDarkColorTheme": "Night Owl",

    // Debug
    "debug.onTaskErrors": "abort",

    // Copilot
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "yaml": false
    },

    // C++
    "[cpp]": {
        "editor.tabSize": 2
    },
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,

    // Markdown
    "[markdown]": {
        "editor.tabSize": 2 // for markdownlint
    },

    // Python
    "[python]": {
        "editor.formatOnType": true
    },
    "jupyter.askForKernelRestart": false,

    // Rust
    "[rust]": {
        "editor.tabSize": 2
    },

    // Unreal
    "files.associations": {
        "*.ush": "hlsl",
        "*.usf": "hlsl"
    },

    // Vim
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "vim.enableNeovim": true,
    "vim.handleKeys": {
        "<C-b>": false, // up 1 line -> hide sidebar
        "<C-p>": false // up 1 page -> open file
    },
    "github.copilot.nextEditSuggestions.enabled": true,
}